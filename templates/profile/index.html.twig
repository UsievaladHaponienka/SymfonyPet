{% extends 'base.html.twig' %}

{% block title %}
    {% if(profile.username) %}
        {{ profile.username }}
    {% else %}
        {{ 'My profile' }}
    {% endif %}
{% endblock %}

{% block body %}
    <div class="grid grid-cols-12 gap-4">
        {% if(user) %}
            <div class="col-span-2 col-start-2">
                {% include 'components/profile/navigation.html.twig' %}
            </div>
        {% endif %}
        <div class="col-span-8 bg-indigo-300 rounded">
            <div class="grid grid-rows">
                <div class="grid grid-cols-4 my-2 mx-4">
                    <div class="col-span-1">
                        <div>
                            <img src="{{ profile.profileImageUrl }}" alt="{{ 'No profile image' }}">
                        </div>
                    </div>
                    <div class="col-span-3">
                        <div class="grid grid-rows">
                            {% if(profile.username) %}
                                <div class="text-2xl ml-6">
                                    {{ profile.username }}
                                </div>
                            {% else %}
                                <div class="text-2xl ml-6">
                                    {{ 'No username' }}
                                </div>
                                {% if (user.id == profile.user.id) %}
                                    <a class="text-xl ml-6 text-indigo-500"
                                       href="{{ path('app_profile_edit') }}">{{ 'You can add username here' }}</a>
                                {% endif %}
                            {% endif %}

                            <div class="text-xl ml-6 mt-4">
                                {% if(profile.description) %}
                                    {{ profile.description }}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
                {% if (user and user.profile.id == profile.id) %}
                    <div class="m-6">
                        {{ form_start(postForm) }}
                        {{ form_end(postForm) }}
                    </div>
                    <div>
                        {% for post in profile.posts %}
                            <div class="m-6 bg-indigo-200 rounded">
                                {% if(post.photos) %}
                                    <div>
                                        {% for photo in post.photos %}
                                            <img src="{{ photo.imageUrl }}">
                                        {% endfor %}
                                    </div>
                                {% endif %}
                                {% if(post.content) %}
                                    <div>
                                        {{ post.content }}
                                    </div>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>

                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
