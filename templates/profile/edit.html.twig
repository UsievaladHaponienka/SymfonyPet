{% extends 'base.html.twig' %}

{% block title %}Edit profile{% endblock %}

{% block body %}

    <div class="grid grid-cols-12 gap-4">
        <div class="col-span-2 col-start-2">
            {% include 'components/profile/navigation.html.twig' with {'profile': profile} %}
        </div>
        <div class="col-span-8 bg-lime-200 rounded">
            <div class="flex flex-col items-center py-6">
                <div class="max-w-xl items-center flex">
                    {{ form_start(profileEditForm) }}
                    <h1 class="text-2xl text-center">Edit profile</h1>
                    {{ form_row(profileEditForm.username) }}
                    {{ form_row(profileEditForm.description) }}
                    {{ form_end(profileEditForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}