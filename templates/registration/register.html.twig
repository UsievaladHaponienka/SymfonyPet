{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="flex flex-col items-center py-6 sm:pt-10">
        <div class="w-full max-w-xl items-center flex">
            {{ form_start(registrationForm) }}
            <h1 class="text-2xl text-center">Register</h1>
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
            <p class="block text-gray-500 font-bold md:text-left mb-1 mt-4 md:mb-0 pr-4">
                {{ 'Already have an account? ' }}
                <a class="text-lime-700" href="{{ path('app_login') }}">{{ 'Click here to login  '}}</a>
            </p>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}