{% for post in posts %}
    <div class="m-6 bg-indigo-200 rounded">
        {% if(post.photos) %}
            <div class="pl-4 py-4">
                {% for photo in post.photos %}
                    <img class="max-w-2xl max-h-2xl" src="{{ photo.imageUrl }}">
                {% endfor %}
            </div>
        {% endif %}
        {% if(post.content) %}
            <div class="m-6">
                {{ post.content }}
            </div>
        {% endif %}
        {% if (app.user and post.canBeDeleted(app.user)) %}
            <div class="m-6">
                {% include('components/buttons/button-red.html.twig')with {
                    'url': path('post_delete', {'postId': post.id}),
                    'title': 'Delete'
                } %}
            </div>
        {% endif %}
        {% if post.comments %}
            <div class="m-6">
                {{ 'Comments:' }}
            </div>
            <div class="m-6">
                {% for comment in post.comments %}
                    <div class="grid grid-cols-8 border border-indigo-300 border-1 rounded bg-white my-2">
                        <div class="col-span-1">
                            <div class="ml-4 my-4">
                                <img src="{{ comment.profile.profileImageUrl }}">
                            </div>
                        </div>
                        <div class="col-span-6 m-4">
                            <div class="text-2xl text-indigo-500">
                                {{ comment.profile.username }}
                            </div>
                            {{ comment.content }}
                        </div>
                        {% if app.user.profile.id == comment.profile.id %}
                            <div class="col-span-1 text-right mr-4">
                                {% include('components/buttons/button-red.html.twig') with {
                                    'url': path('comment_delete', {'commentId': comment.id}),
                                    'title': 'Delete'
                                } %}
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
                <div class="pb-4">
                    {{ component('post_comment', {'postId': post.id}) }}
                </div>
            </div>
        {% endif %}
    </div>
{% endfor %}