{% if app.user.profile.isFriend(profile.id) %}
    <div class="text-center bg-indigo-200 m-4 rounded">
        {{ 'You are friends' }}
    </div>
{% elseif app.user.profile.isFriendshipRequested(profile.id) %}
    <div class="text-center bg-indigo-200 m-4 rounded">
        {{ 'Friendship request sent' }}
    </div>
{% elseif (app.user.profile.id != profile.id) %}
    {% include('components/buttons/button-blue.html.twig') with {
        'url': path('friendship_request_create', {'profileId': profile.id}),
        'title': 'Add to Friends'
    } %}
{% endif %}