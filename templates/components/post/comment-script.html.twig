<script>
    function addComment(postId) {
        let params = new URLSearchParams();
        let commentContent = document.getElementById('new-comment-' + postId).value;
        params.append('comment_content', commentContent)

        axios({
            method: 'post',
            url: '/comment/create/' + postId,
            data: params
        }).then(
            response => {
                document.getElementById('post-comments-' + postId).innerHTML +=
                    response.data.commentContent;
            }
        )
    }
</script>