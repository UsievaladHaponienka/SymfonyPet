<script>
    function joinGroup(groupId) {
        let url = '/group/join/' + groupId;
        axios.post(url)
            .then(response => {
                document.getElementById('join-group-button-' + groupId).innerHTML =
                    '<div class="text-center justify-center flex bg-indigo-200 my-4 p-2 rounded">' +
                    '{{ "You joined group" }}' + '</div>';
            })
    }

    function leaveGroup(groupId) {
        let url = '/group/leave/' + groupId;
        axios.post(url)
            .then(response => {
                document.getElementById('leave-group-button-' + groupId).innerHTML =
                    '<div class="text-center justify-center flex bg-indigo-200 my-4 p-2 rounded">' +
                    '{{ "You left group" }}' + '</div>';
            })
    }

    function createJoinGroupRequest(groupId) {
        let url = '/group/request/create/' + groupId;
        axios.post(url)
            .then(response => {
                document.getElementById('create-join-group-request-button-' + groupId).innerHTML =
                    '<div class="text-center justify-center flex bg-indigo-200 my-4 p-2 rounded">' +
                    '{{ "Access requested" }}' + '</div>';
            })
    }

    function cancelJoinGroupRequest(groupId) {
        let url = '/group/request/cancel/' + groupId;
        axios.post(url)
            .then(response => {
                document.getElementById('cancel-join-group-request-button-' + groupId).innerHTML =
                    '<div class="text-center justify-center flex bg-indigo-200 my-4 p-2 rounded">' +
                    '{{ "Access request canceled" }}' + '</div>';
            })
    }
</script>