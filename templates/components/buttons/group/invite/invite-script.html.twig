<script>
    function createInvite(profileId, groupId) {
        axios.post('/invite/create/' + profileId + '/' + groupId).then(
            response => {
                let i;
                let toUpdate = document.getElementsByClassName('create-invite-button-' + profileId);
                for(i = 0; i < toUpdate.length; i++) {
                    toUpdate[i].innerHTML =
                        '<div class="text-center justify-center flex bg-indigo-200 m-4 p-2 rounded">' +
                        '{{ "Invite created" }}' + '</div>';
                }
            }
        )
    }

    function deleteInvite(inviteId) {
        axios.post('/invite/delete/' + inviteId).then(
            response => {
                let i;
                let toUpdate = document.getElementsByClassName('delete-invite-button-' + inviteId);
                for(i = 0; i < toUpdate.length; i++) {
                    toUpdate[i].innerHTML =
                        '<div class="text-center justify-center flex bg-indigo-200 m-4 p-2 rounded">' +
                        '{{ "Invite canceled" }}' + '</div>';
                }
            }
        )
    }

    function acceptInvite(inviteId) {
        axios.post('/invite/accept/' + inviteId)
            .then(response => {
                let i;
                let toUpdate = document.getElementsByClassName('accept-invite-button-' + inviteId);
                for(i = 0; i < toUpdate.length; i++) {
                    toUpdate[i].innerHTML =
                        '<div class="text-center justify-center flex bg-indigo-200 m-4 p-2 rounded">' +
                        '{{ "Invite Accepted" }}' + '</div>';
                }
            })
    }
</script>