<!-- Remove from friends -->
{% if app.user.profile.isFriend(profileId) %}
    <div class="delete-friendship-button-{{ profileId }}">
        <div class="text-center flex justify-center bg-indigo-200 m-4 p-2 rounded">
            {{ 'You are friends' }}
        </div>
        {% include('components/buttons/friendship/delete-friendship-button.html.twig') %}
    </div>
    <!-- Delete friendship request -->
{% elseif app.user.profile.hasOutgoingRequest(profileId) %}
    <div class="delete-friendship-request-button-{{ profileId }}">
        <div class="text-center flex justify-center bg-indigo-200 m-4 p-2 rounded">
            {{ 'Friendship request sent' }}
        </div>
        {% include('components/buttons/friendship/delete-request-button.html.twig') %}
    </div>
    <!-- Accept friendship request -->
{% elseif app.user.profile.hasIncomingRequest(profileId) %}
    <div class="create-friendship-button-{{ profileId }}">
        <div class="text-center flex justify-center bg-indigo-200 m-4 p-2 rounded">
            {{ 'Friendship requested' }}
        </div>
        {% include('components/buttons/friendship/create-freindship-button.html.twig') %}
    </div>
    <!-- Create friendship request -->
{% elseif (app.user.profile.id != profileId) %}
    <div class="create-friendship-request-button-{{ profileId }}">
        <div class="mt-4">
            {% include('components/buttons/friendship/create-request-button.html.twig') %}
        </div>
    </div>
{% endif %}
