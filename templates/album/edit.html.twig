{% extends 'base.html.twig' %}

{% block title %}Edit album{% endblock %}

{% block body %}
    <div class="grid grid-cols-12 gap-4">
        {% if(app.user) %}
            <div class="col-span-2 col-start-2">
                {% include 'components/profile/navigation.html.twig' %}
            </div>
        {% endif %}
        <div class="col-span-8 bg-indigo-300 rounded">
            <div class="mx-6 mt-4">
                <button class="bg-indigo-200 hover:bg-indigo-400 focus:shadow-outline focus:outline-none text-gray-700 font-bold mt-4 py-2 px-4 rounded">
                    <a href="{{ path('album_show', {'albumId': album.id}) }}">Back</a>
                </button>
                <div class="text-2xl text-center mt-6">
                    {{ album.title }}
                </div>
            </div>
            <div class="text-center mt-6">
            </div>
            <div class="m-6">
                {{ form_start(albumForm) }}
                <h1 class="text-2xl text-center">Edit album</h1>
                {{ form_end(albumForm) }}
            </div>
        </div>
    </div>
{% endblock %}
