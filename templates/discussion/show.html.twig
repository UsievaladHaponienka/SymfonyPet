{% extends 'base.html.twig' %}

{% block title %}
    {{ group.title }} Discussions
{% endblock %}

{% block body %}
    <div class="grid grid-cols-12 gap-4">
        {% if(app.user) %}
            <div class="col-span-2 col-start-2">
                {% include 'components/profile/navigation.html.twig' %}
            </div>
        {% endif %}

        <div class="col-span-8 bg-indigo-300 rounded ">
            <div class="grid grid-rows m-4 p-4">
                <div class="grid grid rows bg-indigo-200 rounded ">
                    <div class="text-2xl p-2">
                        {{ discussion.title }}
                    </div>
                    <div class="text-xl px-2 pb-2">
                        {{ discussion.description }}
                    </div>
                    <div id="discussion-comments-{{ discussion.id }}">
                        {% for comment in discussion.comment %}
                            {% include('components/post/comment.html.twig') %}
                        {% endfor %}
                    </div>
                    <div class="p-4">
                        {% include('components/post/new-comment.html.twig') with {type: 'discussion'} %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% include('components/buttons/post/post-script.html.twig') %}
{% endblock %}
