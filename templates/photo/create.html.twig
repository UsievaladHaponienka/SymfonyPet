{% extends 'base.html.twig' %}

{% block title %}Add photo{% endblock %}

{% block body %}
    <div class="grid grid-cols-12 gap-4">
        {% if(app.user) %}
            <div class="col-span-2 col-start-2">
                {% include 'components/profile/navigation.html.twig' %}
            </div>
        {% endif %}
        <div class="col-span-8 bg-indigo-300 rounded">
            <div>
                <div class="ml-6 mt-6">
                    <a href="{{ path('album_show', {'albumId': album.id}) }}">Back</a>
                </div>
                <div class="text-2xl text-center mt-6">
                    {{ album.title }}
                </div>
            </div>
            <div class="text-center mt-6">
            </div>
            <div class="m-6">
                {{ form_start(photoForm) }}
                <h1 class="text-2xl text-center">Add new photo</h1>
                {{ form_row(photoForm.image_url, {'label': 'Photo'}) }}
                {{ form_rest(photoForm) }}
                {{ form_end(photoForm) }}
            </div>
        </div>
    </div>
{% endblock %}
